<div class="container">
 <div class="row-md-12 block-center my-5">

  <h1 class="my-5">商品詳細</h1>
  <div class="col-md-11 d-flex m-auto ">
  <div class="mr-5">
    <%= image_tag @item.get_image(300, 300) %>
  </div>

  <table class="table table-borderless">
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格（税抜き価格）</td>
      <td><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <%= @item.is_active? %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %></td>
    </tr>
  </table>
  </div>
 </div>
</div>