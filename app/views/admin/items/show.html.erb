<h1>商品詳細</h1>
<div class="flex">
  <div class="margin-top">
    <%= image_tag @item.get_image(300, 300) %>
  </div>
  
  <table class="margin-left">
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格（税抜き価格）</td>
      <td><%= (@item.price*1.1).floor %>(<%= @item.price %>)円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <%= @item.is_active? %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= link_to "編集する", edit_admin_item_path, class: "btn btn-edit" %></td>
    </tr>
  </table>

</div>