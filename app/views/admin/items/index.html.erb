<h1>商品一覧</h1>
<%= link_to "新規登録", new_admin_item_path %>
<table class="table2">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to item.name, admin_item_path(item.id) %>
      </td>
      <td>
        <%= item.price %>
      </td>
      <td>
        <%= item.genre.name %>
      </td>
      <td>
        <% if item.is_active == true %>
        販売中
        <% else %>
        販売中止
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>