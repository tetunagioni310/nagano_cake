<div class="my-5 d-flex justify-content-between">
  <h1>商品一覧</h1>
  <div><%= link_to "新規登録", new_admin_item_path, class: "btn btn-success" %></div>
</div>

<table class="table table-borderless">
  <thead class="table-dark">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

    <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to item.name, admin_item_path(item.id) %>
      </td>
      <td>
        <%= item.price.to_s(:delimited) %>
      </td>
      <td>
        <%= item.genre.name %>
      </td>
      <td>
        <%= item.is_active? %>
      </td>
    </tr>
    <% end %>
  </table>

    <%= paginate @items %>
