<h1>商品編集</h1>
<div>
  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

    <dl>
      <dt><%= f.label :image, "商品画像" %></dt>
      <dd><%= f.file_field :image %></dd>
    </dl>

    <dl>
      <dt><%= f.label :name, "商品名" %></dt>
      <dd><%= f.text_field :name, class: "form-size3" %></dd>
    </dl>

    <dl>
      <dt><%= f.label :introduction, "商品説明" %></dt>
      <dd><%= f.text_area :introduction, class: "form-size3" %></dd>
    </dl>

    <dl>
      <dt><%= f.label :genre_id, "ジャンル" %></dt>
      <dd><%= f.collection_select :genre_id, @genres, :id, :name, {prompt: "--選択してください--"}, class: "form-size3" %></dd>
    </dl>

    <dl>
      <dt><%= f.label :price, "税抜き価格" %></dt>
      <dd><%= f.text_field :price, class: "form-size3" %></dd>
    </dl>

    <dl>
      <dt></dt>
      <dd>
        <%= f.label :is_active, "販売ステータス" %>

        <%= f.label :is_active, '販売中', value: 'true' %>
        <%= f.radio_button :is_active, 'true' %>

        <%= f.label :is_active, '販売停止中', value: 'false' %>
        <%= f.radio_button :is_active, 'false' %>
      </dd>
    </dl>

    <dl>
      <dt></dt>
      <dd><%= f.submit "変更を保存", class: "btn"  %></dd>
    </dl>
  <% end %>
</div>
