<div class="container">
  <div class="row-md-12">
    <div class="col-md-8 mx-md-auto m-sm-0 my-5">
      
    <h1 class="my-5">商品新規登録</h1>
    
    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <%= render "admin/shared/error_messages", resource: @item %>
    
    <div class="form-group row">
      <%= f.label :image, "商品画像", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9 row">
         <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*" %>
      </div>
    </div>
     
    <div class="form-group row">
      <%= f.label :name, "商品名", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9 row">
        <%= f.text_field :name, placeholder: "商品名", class: "col-sm-10 form-control" %>
      </div>
    </div>
 
    <div class="form-group row">
      <%= f.label :introduction, "商品説明", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9 row">
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", rows: "5", class: "col-sm-10 form-control" %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :genre_id, "ジャンル", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9 row">
        <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: "--選択してください--"}, class: "col-sm-10 form-control" %>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :price, "税抜価格", class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9 row">
        <%= f.text_field :price, placeholder: "1000", class: "col-sm-10 form-control" %>
        <p class="col-form-label d-none d-sm-block">円</p>
      </div>
    </div>
    
    <div class="form-group row">
      <%= f.label :is_active, "販売ステータス", class: "col-sm-3" %>
      <div class="col-sm-9">
        <%= f.radio_button :is_active, 'true' %>
        <%= f.label :is_active, '販売中', value: 'true' %>

        <%= f.radio_button :is_active, 'false' %>
        <%= f.label :is_active, '販売停止中', value: 'false' %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-sm-3 col-form-label"></div>
      <div class="col-sm-9"><%= f.submit "新規登録", class: "btn btn-success w-75" %></div>
    </div>
      
  <% end %>

</div>
</div>
</div>