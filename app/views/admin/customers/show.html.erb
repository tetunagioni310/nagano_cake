<div class="row">
<div class="col-md-5 m-auto py-5">
<h2 class="my-5 text-center"><%= @customer.full_name %>の会員詳細</h2>
<table class="table table-borderless col-sm-12">
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @customer.last_name_kana%>　<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
      <%= @customer.is_deleted? %>
    </td>
  </tr>

</table>


  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6"><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success w-75" %></div>
    <div class="col-3"></div>
  </div>

</div>
</div>
