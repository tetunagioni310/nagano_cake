<div class="container">
 <div class="row-md-12">
  <div class="col-md-8 col-sm-12 m-auto">
  <h2 class="my-5 bg-light text-center col-6">ジャンル編集</h2>

  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :name, "ジャンル名", class: "col-4 col-form-label" %>
        <div class="col-4"><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control" %></div>
        <div class="col-4"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
      </div>
  <% end %>
  </div>
 </div>
</div>