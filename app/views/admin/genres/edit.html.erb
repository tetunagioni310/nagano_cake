<h2>ジャンル編集</h2>

<%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <table>
      <tr class="form-title">
        <td><%= f.label :name, "ジャンル名" %></td>
        <td><%= f.text_field :name, placeholder: "ジャンル名", class: "form-size" %></td>
        <td><%= f.submit "変更を保存", class: "btn btn-edit" %></td>
      </tr>
    </table>
<% end %>