<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <table>
    <tr class="form-title">
      <td><%= f.label :name, "ジャンル名" %></td>
      <td><%= f.text_field :name, placeholder: "ジャンル名", class: "form-size" %></td>
      <td><%= f.submit "新規登録", class: "btn2 btn-color1" %></td>
    </tr>
  </table>
<% end %>


  <table class="table1">
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td>
          <%= link_to "編集する", " /admin/genres/#{genre.id}/edit", class: "btn3 btn-color1" %>
      </td>
    </tr> 
    <% end %>
  </table>
