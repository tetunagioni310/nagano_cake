<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <div class="add-genre">
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name, placeholder: "ジャンル名", class: "form-size" %>
    <%= f.submit "新規登録", class: "btn2" %>
  </div>
<% end %>


  <table border="1">
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", " /admin/genres/#{genre.id}/edit" %></td>
    </tr>
    <% end %>
  </table>
