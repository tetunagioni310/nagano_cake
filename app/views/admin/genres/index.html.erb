<h2 class="my-5">ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <table class="table table-borderless w-50">
    <tr class="form-title">
      <td><%= f.label :name, "ジャンル名" %></td>
      <td><%= f.text_field :name, placeholder: "ジャンル名", class: "form-size" %></td>
      <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
    </tr>
  </table>
<% end %>


  <table class="table table-borderless w-25">
    <tr class="border-top border-bottom" >
      <th>ジャンル</th>
      <th></th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td class="text-right">
          <%= link_to "編集する", " /admin/genres/#{genre.id}/edit", class: "btn btn-success" %>
      </td>
    </tr> 
    <% end %>
  </table>
