<div class="container pb-5">
  <div class="row pb-5">
    <div class="col-12 mx-auto pb-5">
      <h1 class="py-5">配送編集</h1>
      <%= form_with model: @address, url: public_address_path, method: :patch do |f| %>
      <%= render "public/shared/error_messages", resource: @address %>

        <div class="form-group row">
          <div class="col-sm-3 col-form-label">郵便番号（ハイフンなし）</div>
          <div class="col-sm-3"><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3 col-form-label">住所</div>
          <div class="col-sm-6"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></div>
        </div>

        <div class="form-group row">
          <div class="col-sm-3 col-form-label">宛名</div>
          <div class="col-sm-3">
            <%= f.text_field :name, placeholder: "令和道子", class: "form-control" %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
          </div>
          <div class="col-sm-3"></div>
          <div class="col-sm-3"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
        </div>

      <% end %>
    </div>
  </div>
</div>
