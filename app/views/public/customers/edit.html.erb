<div class="container">
  <div class="row">
    <div class="col-md-10 py-5 mb-5">

    <h1 class="my-5">会員情報編集</h1>

    <%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
    <%= render "public/shared/error_messages", resource: @customer %>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">名前</div>
        <div class="col-sm-10 row">
          <div class="col-sm-5"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "form-control" %></div>
          <div class="col-sm-5"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子",class: "form-control" %></div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">フリガナ</div>
        <div class="col-sm-10 row">
          <div class="col-sm-5"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ", class: "form-control" %></div>
          <div class="col-sm-5"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ", class: "form-control" %></div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">郵便番号</div>
        <div class="col-sm-10 row">
          <div class="col-sm-5">
            <%= f.text_field :postal_code, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">住所</div>
        <div class="col-sm-10 row">
          <div class="col-sm-10">
            <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">電話番号</div>
        <div class="col-sm-10 row">
          <div class="col-sm-5">
            <%= f.telephone_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 col-form-label">メールアドレス</div>
        <div class="col-sm-10 row">
          <div class="col-sm-5">
            <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group row mt-4">
        <div class="col-sm-2 col-form-label"></div>
        <div class="col-sm-10 row">
          <div class="col-sm-5"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
          <div class="col-sm-5"><%= link_to "退会する", quit_public_customers_path, class: "btn btn-danger" %></div>
        </div>
      </div>

    <% end %>

    </div>
  </div>
</div>