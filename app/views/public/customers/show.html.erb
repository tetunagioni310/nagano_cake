
<h1>マイページ</h1>

<div class="p-customer-info">
  <h2>登録情報</h2>
  <div class="margin-left"><%= link_to "編集する", edit_public_customer_path(@customer.id), class: "btn btn-edit"%></div>
</div>

<table border="1">
  <tr>
    <th>氏名</th>
    <td><%= @customer.full_name %></td>
  </tr>

  <tr>
    <th>カナ</th>
    <td><%= @customer.full_name_kana %></td>
  </tr>

  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>

  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>

  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<table class="p-customer-info">
  <tr>
    <td>配送先</td>
    <td><%= link_to "一覧を見る", public_addresses_path, class: "btn btn-normal" %></td>
  </tr>
  <tr>
    <td>注文履歴</td>
    <td><%= link_to "一覧を見る", "#", class: "btn btn-normal" %></td>
  </tr>
  </td>
</table>
