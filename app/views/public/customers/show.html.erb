<div class="container">
  <div class="row">
    <div class="col py-5 mb-5">
      <h1 class="my-5">マイページ</h1>

      <div class="col-sm-8 row">
        <h2 class="col-sm-4">登録情報</h2>
        <div class="col-sm-3"><%= link_to "編集する", edit_public_customer_path(@customer.id), class: "btn btn-success"%></div>
      </div>

      <div class="col-sm-8">
      <table class="table table-bordered border my-3">
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>

        <tr>
          <th>カナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      </div>

        <div class="col-sm-8 row">
          <div class="col-sm-3 col-form-label">配送先</div>
          <div class="col-sm-3"><%= link_to "一覧を見る", public_addresses_path, class: "btn btn-success" %></div>
        </div>

        <div class="col-sm-8 row mt-3">
          <div class="col-sm-3 col-form-label">注文履歴</div>
          <div class="col-sm-3"><%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %></div>
        </div>

    </div>
  </div>
</div>
