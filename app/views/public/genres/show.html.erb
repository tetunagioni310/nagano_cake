<div class="flex">
  <div class="item-left">
    <table class="items-genre border table">
    <tr class="border">
        <td class="text-c">ジャンル検索</td>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, public_genre_path(genre.id), class: "genre-link" %></td>
    </tr>
    <% end %>

    <tr>
      <td class="tf-height"></td>
    </tr>
    </table>
  </div>



  <div class="item-right">
    <div class="margin-auto">
      
      <div class="flex">
        <h1><%= @genre.name %></h1>
        <p class="count">（全<%= @items.count %>件）</p>
      </div>
      
      <div class="item-list">
        <% @items.each do |item| %>
        <div class="items">
          <%= image_tag item.get_image(150,150)%>
          <h3 class="over-flow"><%= link_to item.name, public_item_path(item.id), class: "item-link" %></h3>
          <p>¥<%= item.price %></p>
        </div>
        <% end %>
      </div>
    
    </div>
    <div class="items-paginate">
       <%= paginate @items %>
    </div>
  </div>
</div>