<div class="container">
<div class="row py-5">

    <%= render "public/shared/genres_search", genres: @genres %>

    <div class="col-md-9 m-auto">

     <div class="text-center">
       <h1><%= @genre.name %>（全<%= @full_items.count %>件）</h1>
      <div class="d-flex flex-wrap my-auto">
        <% @items.each do |item| %>
        <div class="col-sm-3 pt-5">
          <a class="text-decoration-none my-auto" href="/public/items/<%= item.id %>">
            <%= image_tag item.get_image(150,150)%>
            <p class="text-wrap mt-2"><%= item.name %></p>
            <p>¥<%= item.price.to_s(:delimited) %></p>
          </a>
        </div>
        <% end %>
      </div>
     </div>
     <div class="col-1 m-auto"><%= paginate @items %></div>
    </div>
   </div>
  </div>
 </div>
</div