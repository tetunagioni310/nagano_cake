<div class="col-md-2 py-sm-5 pb-5 d-none d-lg-block">
  <div class="border border-dark">
      <p class="mb-3 border-bottom border-dark text-center">ジャンル検索</p>

      <div class="d-flex flex-column m-sm-3 pb-sm-5">
        <% genres.each do |genre| %>
          <%= link_to genre.name, public_genre_path(genre.id), class: "my-2 text-decoration-none text-dark" %>
        <% end %>
      </div>
  </div>
</div>