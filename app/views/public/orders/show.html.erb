<h1>注文履歴詳細</h1>

<table valign="top">
<tr valign="top">
    <td>
        <h2>注文情報</h2>
        <table border="1">

            <tr>
                <th  style="width: 100px;">注文日</th>
                <td  style="width: 500px;"><%= @order.created_at.strftime('%Y/%m/%d')%></td>
            </tr>

            <tr>
                <th>配送先</th>
                <td>
                    〒<%= @order.postal_code %><br>
                      <%= @order.address %><br>
                      <%= @order.name %>
                </td>
            </tr>

            <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method_i18n %></td>
            </tr>

            <tr>
                <th>ステータス</th>
                <td><%= @order.status_i18n %></td>
            </tr>

        </table>
    </td>

    <td>
        <h2>請求情報</h2>
        <table border="1">

            <tr>
                <th style="width: 150px;">商品合計</th>
                <td style="width: 100px;"><%= (@order.bill - @order.shipping_cost).to_s(:delimited)  %></td>
            </tr>

            <tr>
                <th>配送料</th>
                <td><%= @order.shipping_cost %></td>
            </tr>

            <tr>
                <th><strong>ご請求額</strong></th>
                <td><%= @order.bill.to_s(:delimited) %></td>
            </tr>
            
        </table>
    </td>
</tr>
<tr>
    <td colspan="2">
      <table border="1">
            
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>

      <% @order_details.each do |order_detail| %>
      <tr>
        <td style="width: 500px;"><%= order_detail.item.name %></td>
        <td style="width: 150px;"><%= order_detail.purchase_price %></td>
        <td style="width: 80px;"><%= order_detail.amount %></td>
        <td style="width: 80px;">
            <%= order_detail.purchase_price * order_detail.amount %>
        </td>
      </tr>
      <% end %>

      </table>
    </td>
</tr>
</table>

