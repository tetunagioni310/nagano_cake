  <div class="container">
    <div class="row">
      <div class="col-md-10 mb-5 my-auto">
        <h2 class="mt-5">新規会員登録</h2>
        <br>
        <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
        <%= render "public/shared/error_messages", resource: @customer %>

        <div class="form-group row">
          <div class="col-form-label col-3">名前</div>
          <div class="col-4">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子",class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-form-label col-3">フリガナ</div>
          <div class="col-4">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ", class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-form-label col-md-3">メールアドレス</div>
          <div class="col-md-4">
            <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row ">
          <div class="col-form-label col-md-3">郵便番号(ハイフンなし)</div>
          <div class="col-md-4">
            <%= f.text_field :postal_code, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-form-label col-md-3">住所</div>
          <div class="col-md-8">
            <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row d-flex">
          <div class="col-form-label col-md-3">電話番号（ハイフンなし）</div>
          <div class="col-md-4">
            <%= f.telephone_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-form-label col-md-3">パスワード（6文字以上）</div>
          <div class="col-md-4">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row d-flex">
          <div class="col-form-label col-md-3">パスワード（確認用）</div>
          <div class="col-md-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-form-label col-md-3"></div>
          <div class="col-6 mt-3">
            <%= f.submit "新規登録", class: "col-6 btn btn-success" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="mb-5">
        <h2>既に登録済みの方</h2>
        <p><%= link_to "こちら", customer_session_path %>　からログインしてください</p>
      </div>
    </div>
  </div>


