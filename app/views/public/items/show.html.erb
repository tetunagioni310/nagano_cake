<div class="container">
<div class="row py-5">

  <%= render "public/shared/genres_search", genres: @genres %>

  <div class="col-md-10 row m-auto justify-content-center">

    <div class="col-md-4 m-md-3 ">
      <%= image_tag @item.get_image(300,300) %>
    </div>

    <div class="col-lg-7 text-left pl-5">
        <h3 class="mt-3"><%= @item.name%></h1>
        <p class="pt-2 my-lg-5"><%= @item.introduction %></p>
        <p class="pt-3 h3">¥<%= (@item.with_tax_price).to_s(:delimited) %><span class="h6">（税込)</span></p>
        <div class="mt-3">
          <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
          <%= f.select :amount, *[1..10], { include_blank: '個数選択'}, required:true %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
          <%= f.submit 'カートに入れる', class: 'btn btn-success btn-sm ml-3' %>
          <% end %>
          <%= link_to "戻る", public_items_path, class: "text-decoration-none text-dark mt-3" %>
        </div>
   </div>
  </div>
 </div>
</div>