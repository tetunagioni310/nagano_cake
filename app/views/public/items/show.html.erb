<div class="item-index">
  <div class="item-left">
    <table class="items-genre border table">
    <tr class="border">
        <td class="text-c">ジャンル検索</td>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>

    <tr>
      <td class="tf-height"></td>
    </tr>
    </table>
  </div>
  


  <div class="item-right">
    <div class="item-show">
      <div class="item-image">
        <%= image_tag @item.get_image(300,300) %>
      </div>
    
      <section class="item-detail">
        <h1><%= @item.name%></h1>
        <p><%= @item.introduction %></p>
        <p>¥<%= (@item.with_tax_price).to_s(:delimited) %>（税込）</p>
      
        <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
        <table>
          <tr>
            <td>
              <%= f.select :amount, *[1..10], { include_blank: '個数選択'}, required:true %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.hidden_field :customer_id, :value => current_customer.id %>
            </td>
            <td>
              <%= f.submit 'カートに入れる', class: 'btn btn-new-record' %>
            </td>
          </tr>
        </table>
        <% end %>
      </section>
    </div>
</div>
</div>
