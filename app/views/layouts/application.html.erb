<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <h1 class="header-left">
            <%= link_to "ながのCAKE", root_path, class: "logo" %>
        </h1>
      <div class="header-right">
        <nav>
          <ul class="navbar">
            <% if customer_signed_in? %>
              <li class="nav-items">
                <%= link_to "マイページ", public_customer_path(current_customer.id), class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "商品一覧", public_items_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "カート", public_cart_items_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-items">
                <%= link_to "商品一覧", admin_items_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "会員一覧", admin_customers_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "注文履歴一覧", admin_orders_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "ジャンル一覧", admin_genres_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-items">
                <%= link_to "About", public_homes_about_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
              <%= link_to "商品一覧", public_items_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-items">
                <%= link_to "ログイン", new_customer_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </nav>

        <div class="search">
          <form action="自身のwebサイトURL" method="get">
            <input type="search" name="search" placeholder="Search" style="width: 220px; height: 30px;">
            <input type="submit" name="submit" value="検索">
          </form>
        </div>

      </div>
    </header>

    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>

    <footer>
    </footer>
  </body>
</html>
